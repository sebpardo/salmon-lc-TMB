  journal	= {ICES Journal of Marine Science},
  month		= {jun},
  title		= {{Wild Atlantic salmon exposed to sea lice from aquaculture
		  show reduced marine survival and modified response to ocean
		  climate}},
  url		= {https://academic.oup.com/icesjms/advance-article/doi/10.1093/icesjms/fsaa079/5864917},
  year		= {2020}
}

